<div class="container d-flex flex-column justify-content-center align-items-center mt-4">
  <div class="title option-record" data-record="{{checkedItem}}">
    <h1>你想對誰說幹話</h1>
  </div>
  <form method="post" action="/">
    <div class="row mt-3 cards bg-office">
      {{#each occupations}}
      <div class="col-md-4">
        <div class="card">
          <div class="card-img d-flex justify-content-center">
            <img src="{{this.avatar}}" class="card-img-top" alt="avatar of {{this.en}}">
          </div>
          <div class="card-body d-flex justify-content-center">
            <div class="input-group-prepend">
              <div class="input-group-text">
                <input type="radio" aria-label="{{this.en}}" name="occupation" value="{{this.en}}">
                &nbsp;{{this.ch}}
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
      <div class="image-source d-flex flex-row-reverse w-100">
        <a class="text-muted font-weight-light badge badge-light" href='https://zh.pngtree.com/free-backgrounds'
          target="_blank">pngtree圖片素材
        </a>
      </div>

    </div>


    <div class="row w-100 mt-3 d-flex justify-content-center">
      <div class="mr-2 mb-2">
        <button type="submit" class="btn btn-secondary inline trash-talk-generate-btn">產生幹話
        </button>
      </div>
      <textarea placeholder="今天，我想說點⋯⋯" readonly class="p-1">{{#if trashTalk}}{{trashTalk}}{{/if}}</textarea>
    </div>
  </form>
</div>